<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:textAlignment="textEnd"
        android:textSize="100dp"
        android:textColor="@color/white"
        android:text="0"
        android:id="@+id/result_text"
        android:layout_width="380dp"
        android:layout_height="250dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <Button
            android:id="@+id/ac_Btn"
            style="@style/GreyRoundedCornerButton"
            android:text="AC"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/upDownNum"
            style="@style/GreyRoundedCornerButton"
            android:text="+/-"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/procent"
            style="@style/GreyRoundedCornerButton"
            android:text="%"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/division"
            style="@style/OrangeRoundedCornerButton"
            android:text="รท"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <Button
            android:id="@+id/seven_btn"
            style="@style/DarkGreyRoundedCornerButton"
            android:textColor="@color/white"
            android:text="7"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/eight_btn"
            style="@style/DarkGreyRoundedCornerButton"
            android:textColor="@color/white"
            android:text="8"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/nine_btn"
            style="@style/DarkGreyRoundedCornerButton"
            android:textColor="@color/white"
            android:text="9"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/multiplication"
            style="@style/OrangeRoundedCornerButton"
            android:text="X"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <Button
            android:id="@+id/four_btn"
            style="@style/DarkGreyRoundedCornerButton"
            android:textColor="@color/white"
            android:text="4"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/five_btn"
            style="@style/DarkGreyRoundedCornerButton"
            android:textColor="@color/white"
            android:text="5"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/six_btn"
            style="@style/DarkGreyRoundedCornerButton"
            android:textColor="@color/white"
            android:text="6"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/minus"
            style="@style/OrangeRoundedCornerButton"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <Button
            android:id="@+id/one_btn"
            style="@style/DarkGreyRoundedCornerButton"
            android:textColor="@color/white"
            android:text="1"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/two_btn"
            style="@style/DarkGreyRoundedCornerButton"
            android:textColor="@color/white"
            android:text="2"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/three_btn"
            style="@style/DarkGreyRoundedCornerButton"
            android:textColor="@color/white"
            android:text="3"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/plus"
            style="@style/OrangeRoundedCornerButton"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/zero_btn"
            style="@style/DarkGreyRoundedCornerButton"
            android:textColor="@color/white"
            android:text="0"
            android:textSize="50dp"
            android:layout_width="190dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/dot_btn"
            style="@style/DarkGreyRoundedCornerButton"
            android:textColor="@color/white"
            android:text="."
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/equals_btn"
            style="@style/DarkGreyRoundedCornerButton"
            android:textColor="@color/white"
            android:text="="
            android:textSize="50dp"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>